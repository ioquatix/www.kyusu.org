<?r 
if source = attributes[:src]
	path = parent.node.local_path(Utopia::Path.create(source))
	escaped_code = Strings::to_html(File.read(path))
else
	escaped_code = content
end

escaped_code = escaped_code.gsub(/%%([a-z]+)\{(.*?)\}/) do |match|
	"<span class=\"#{$1}\">#{$2}</span>"
end

if brush = attributes[:brush] ?>
	<pre class="syntax brush-#{brush}">#{escaped_code}</pre>
<?r else ?>
	<pre class="syntax">#{escaped_code}</pre>
<?r end ?>
